<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.madwin.mwcalc"
          android:versionCode="4"
          android:versionName="2.1.0" >

     <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19"/>

     <application
        android:icon="@drawable/mwcalc_icon"
        android:label="@string/app_name"
        android:allowBackup="true"
        android:debuggable="true">
            <activity
            android:label="@string/app_name"
            android:name="com.madwin.mwcalc.InterfaceUI"
            android:screenOrientation="portrait"
                android:windowSoftInputMode="stateAlwaysHidden">
                <intent-filter >
                    <action android:name="android.intent.action.MAIN" />

                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>
            </activity>
        <activity android:name="com.madwin.mwcalc.PreferencesUI"
                android:label="@string/settings"
                android:windowSoftInputMode="stateAlwaysHidden"/>
         <activity android:name="com.madwin.mwcalc.HelpUI"
                 android:label="About"
                 android:windowSoftInputMode="stateAlwaysHidden"/>
         <activity android:name="com.madwin.mwcalc.UnitConverter"
                android:label="Unit Converter"/>

     </application>

</manifest>