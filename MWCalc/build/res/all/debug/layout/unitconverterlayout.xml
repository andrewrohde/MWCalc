<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linear_layout"
    android:gravity="left">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/startingvalue"
            android:id="@+id/startingvaluetext"
            android:layout_gravity="center_horizontal|top"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/startingvalueinput"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textAlignment="center"
            android:imeOptions="actionDone"/>

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"/>

    <ExpandableListView
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:id="@+id/converterlist"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textFilterEnabled="false"
            android:smoothScrollbar="true"
            android:footerDividersEnabled="true"
            android:paddingLeft="6dp"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/convertfinalvalue"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/text_bar"
        android:textSize="15dp"
        android:textIsSelectable="false" />
</LinearLayout><!-- From: file:/home/andrew/workspace/android/MWCalc/MWCalc/src/main/res/layout/unitconverterlayout.xml -->